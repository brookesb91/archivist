mixin post(post)
  .post(id="p" + post.no).bg-surface.py-md.px-lg.rounded
    .post-meta.flex.flex-row.items-center.font-sm
      if post.country
        img.post-flag(src="https://www.countryflags.io/" + post.country + "/flat/16.png")
      .post-name.text-green.font-bold=post.name
      if post.id
        .post-id.font-xs(data-id=post.id)=post.id
      if post.sub
        .post-subject.text-red.font-bold=post.sub
      .post-time=post.now
      .post-no="No. " + post.no

    .post-content.flex.flex-row.flex-wrap.font-md
      if post.filename && post.tim
        .post-attachment
          img.post-image(src="https://i.4cdn.org/" + thread.board + "/" + post.tim + "s.jpg", data-thumb="https://i.4cdn.org/" + thread.board + "/" + post.tim + "s.jpg", data-full="https://is2.4chan.org/" + thread.board + "/" + post.tim + post.ext, alt="", onclick="toggleImage(this)")
      .post-comment!=post.com

    .post-replies.flex.flex-row.flex-wrap.font-sm